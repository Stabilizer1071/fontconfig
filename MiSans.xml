	</match>
	
	<!-- No Times New Roman -->
	<match target="pattern">
		<test compare="contains" name="family">
			<string>Times New Roman</string>
		</test>
		<edit binding="strong" name="family">
			<string>serif</string>
		</edit>
	</match>
	
	<!-- No SimSun/SimHei -->
	<match target="pattern">
		<test compare="contains" name="family">
			<string>SimSun</string>
		</test>
		<edit binding="strong" name="family">
