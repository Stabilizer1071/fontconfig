		</edit>
	</match>
	<match target="pattern">
		<test compare="contains" name="family">
			<string>SF Mono</string>
		</test>
		<edit binding="strong" name="family">
			<string>monospace</string>
		</edit>
	</match>
	
	<!-- No Monospaces from windows -->
	<match target="pattern">
		<test compare="contains" name="family">
			<string>Source Code</string>
		</test>
		<edit binding="strong" name="family">
			<string>monospace</string>
		</edit>
	</match>
	<match target="pattern">
		<test compare="contains" name="family">
			<string>Lucida</string>
		</test>
		<edit binding="strong" name="family">
			<string>monospace</string>
		</edit>
	</match>
	<match target="pattern">
		<test compare="eq" name="family">
			<string>Terminal</string>
		</test>
		<edit binding="strong" name="family">
			<string>monospace</string>
		</edit>
	</match>

	<!-- Default sans-serif font -->
	<match target="pattern">
		<test name="family" qual="any">
			<string>sans-serif</string>
		</test>
		<edit binding="strong" mode="prepend" name="family">
			<string>MiSans VF</string>
			<string>MiSans TC VF</string>
			<string>MiSans L3</string>
			<string>MiSans Latin VF</string>
			<string>MiSans Arabic VF</string>
			<string>MiSans MiSans Tibetan VF</string>
			<string>MiSans Lao VF</string>
			<string>MiSans Myanmar VF</string>
			<string>MiSans Khmer VF</string>
			<string>MiSans Gurmukhi VF</string>
			<string>MiSans Gujarati VF</string>
			<string>MiSans Devanagari VF</string>
			<string>Noto Color Emoji</string>
			<string>Noto Emoji</string>
		</edit>
	</match>

	<!-- Default serif fonts -->
	<match target="pattern">
		<test name="family" qual="any">
			<string>serif</string>
		</test>
		<edit binding="strong" mode="prepend" name="family">
			<string>Noto Serif</string>
			<string>Noto Serif CJK SC</string>
			<string>Noto Serif CJK HK</string>
			<string>Noto Serif CJK TC</string>
			<string>Noto Serif CJK JP</string>
			<string>Noto Serif CJK KR</string>
			<string>Noto Serif Devanagari</string>
			<string>Noto Serif Ethiopic</string>
			<string>Noto Serif Gujarati</string>
			<string>Noto Serif Gurmukhi</string>
			<string>Noto Serif Hebrew</string>
			<string>Noto Serif Kannada</string>
			<string>Noto Serif Khmer</string>
			<string>Noto Serif Lao</string>
			<string>Noto Serif Malayalam</string>
			<string>Noto Serif Myanmar</string>
			<string>Noto Serif Oriya</string>
			<string>Noto Serif Sinhala</string>
			<string>Noto Serif Tamil</string>
			<string>Noto Serif Telugu</string>
			<string>Noto Serif Thai</string>
			<string>Noto Serif Tibetan</string>
			<string>Noto Serif Toto</string>
			<string>Noto Serif Vithkuqi</string>
			<string>Noto Serif Yezidi</string>
			<string>Noto Color Emoji</string>
			<string>Noto Emoji</string>
		</edit>
	</match>

	<!-- Default monospace fonts -->
	<match target="pattern">
		<test name="family" qual="any">
			<string>monospace</string>
		</test>
		<edit binding="strong" mode="prepend" name="family">
			<string>JetBrains Mono</string>
			<string>MiSans VF</string>
			<string>MiSans TC VF</string>
			<string>MiSans L3</string>
			<string>MiSans Latin VF</string>
			<string>MiSans Arabic VF</string>
			<string>MiSans MiSans Tibetan VF</string>
			<string>MiSans Lao VF</string>
			<string>MiSans Myanmar VF</string>
			<string>MiSans Khmer VF</string>
			<string>MiSans Gurmukhi VF</string>
			<string>MiSans Gujarati VF</string>
			<string>MiSans Devanagari VF</string>
			<string>Noto Color Emoji</string>
			<string>Noto Emoji</string>
		</edit>
	</match>
	
